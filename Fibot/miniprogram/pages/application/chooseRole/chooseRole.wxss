#slide {
    margin: 0 auto;
    width: 100%;
    height: 500px;
    position: relative;
  }

  image{
    width: 600rpx;
    height: 800rpx;

  }

#slide li {
    position: absolute;
    width:400rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: flex-start;
    -webkit-box-align: flex-start;
    -webkit-align-items: flex-start;
    background:#fff;
    overflow:hidden;
    box-shadow: 0 0 20px #1d374d;
}

.showText {
  position: absolute;
  justify-content: center;
  margin-top: 850rpx;
  margin-left: 300rpx;
  font-size: 14pt;
  color: #fff;
