<view class="list-box">
  <block wx:key wx:for='{{goodsList}}' wx:for-index='index'>
        <view class="newest-list" bindtap="navigateToGoodInfo">
            <navigator url="../details/details">
                <image src="{{host+'/goodsPic/'+item.photo}}"></image>
                <view class="text_title"><text>{{item.name}}</text></view>
                <view class="text_price"><text>￥{{item.sellprice}}</text></view>
            </navigator>
        </view>
  </block>
</view>